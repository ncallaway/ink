{
  "name": "@ink/cli",
  "version": "0.1.0",
  "description": "Ink CLI - command-line interface for DVD backup system",
  "type": "module",
  "bin": {
    "ink": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "go": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ink/shared": "workspace:*",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "cli-table3": "^0.6.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3"
  }
}
