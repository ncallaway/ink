{
  "name": "@ink/daemon",
  "version": "0.1.0",
  "description": "Ink daemon - background service for DVD backup automation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
