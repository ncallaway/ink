    "test": "bun test"
  },
  "dependencies": {
    "@ink/shared": "workspace:*",
    "hono": "^3.11.7"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.6",
    "typescript": "^5.9.3"
  }
}
